<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Date TextView -->
    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/august_6_2024" />

    <!-- Medicine ImageView -->
    <ImageView
        android:id="@+id/medicine_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/date_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/logo" />

    <!-- Medicine Name TextView -->
    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/medicine_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/aspirin" />

    <!-- Dose TextView -->
    <TextView
        android:id="@+id/dose_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/medicine_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="@string/_500_mg" />

    <!-- Buttons Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dose_text"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <!-- Taken Button -->
        <Button
            android:id="@+id/button_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taken" />

        <!-- Skipped Button -->
        <Button
            android:id="@+id/button_skipped"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:text="@string/skipped" />

    </LinearLayout>

</RelativeLayout>
